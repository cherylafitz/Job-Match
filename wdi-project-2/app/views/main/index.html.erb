<%= render "shared/flash" %>
<div class="main">
  <div class="row">
      <form class="center-block form-inline search-form" role="search">
        <div class="form-group">
          <%= bootstrap_form_tag do |f| %>
          <%= f.text_field :skill, label: "skill", class: "form-control" %>
          <%= f.text_field :location, label: "location", class: "form-control" %>
          <%= f.submit "Search" %>
        <% end %>
       </div>
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
      </form>

  </div>
  <div class="row">

  <div class="instructions text-center text-info">
      <p>Enter a skill and location to explore available jobs, then add them to your job board.</p>
      <p>To see your Match Score for each job, add your <%= link_to "Resume", users_path, class: "" %>.</p>

  </div>
  </div>
<div class="clouds">
  <% unless params[:skill].nil? %>
  <% @search_results.each do |result| %>

  <div class="col-md-6 col-lg-6">

  <h4 class='text-center'>

    <%= link_to result["jobtitle"], @url,:target => '_blank' %>
  <a href="/add_job/<%= result['jobkey'] %> "><button class='icon-pad btn btn-success btn-xs glyphicon glyphicon-plus' data-toggle="tooltip" title="Add to Job Board"></button></a></h4>
    <div class='job-desc'></div>
  </div>
  <% end %>
  <% end %>
</div>
</div>